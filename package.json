{
	"name": "eleventylit-starter",
	"version": "1.0.0",
	"description": "Eleventy+Lit (typescript) starter template",
	"main": "_prod/index.html",
	"scripts":
	{
		"dev": "npm run serve:dev --watch",
		"start": "npm run serve:prod --watch",
		"build:type-check": "wireit",
		"build:dev": "wireit",
		"build:dev:ts": "wireit",
		"serve:dev": "wireit",
		"build:prod": "wireit",
		"build:prod:ts": "wireit",
		"serve:prod": "wireit"
	},
	"wireit":
	{
		"build:type-check":
		{
			"command": "tsc -p tsconfig.json --pretty --incremental",
			"files":
			[
				"src",
				"tsconfig.json"
			],
			"clean": "if-file-deleted",
			"output":
			[
				"tsconfig.tsbuildinfo"
			]
		},
		"build:dev":
		{
			"command": "NODE_ENV=DEV eleventy",
			"files":
			[
				"site",
				"lib",
				"eleventy-helpers",
				"eleventy.config.cjs"
			],
			"output":
			[
				"_dev"
			],
			"dependencies":
			[
				"build:dev:ts",
				"build:type-check"
			]
		},
		"build:dev:ts":
		{
			"command": "NODE_ENV=DEV node esbuild.config.mjs",
			"files":
			[
				"src",
				"tsconfig.json",
				"esbuild.config.mjs"
			],
			"clean": "if-file-deleted",
			"output":
			[
				"lib"
			]
		},
		"serve:dev":
		{
			"command": "NODE_ENV=DEV eleventy --serve",
			"service": true,
			"files":
			[
				"site",
				"lib",
				"eleventy-helpers",
				"eleventy.config.cjs"
			],
			"dependencies":
			[
				"build:dev:ts",
				"build:type-check"
			]
		},
		"build:prod":
		{
			"command": "NODE_ENV=PROD eleventy",
			"files":
			[
				"site",
				"build",
				"eleventy-helpers",
				"eleventy.config.cjs"
			],
			"output":
			[
				"_prod/"
			],
			"dependencies":
			[
				"build:prod:ts",
				"build:type-check"
			]
		},
		"build:prod:ts":
		{
			"command": "NODE_ENV=PROD node esbuild.config.mjs",
			"files":
			[
				"src",
				"tsconfig.json",
				"esbuild.config.mjs"
			],
			"clean": "if-file-deleted",
			"output":
			[
				"build"
			]
		},
		"serve:prod":
		{
			"command": "NODE_ENV=PROD eleventy --serve",
			"service": true,
			"files":
			[
				"site",
				"build",
				"eleventy-helpers",
				"eleventy.config.cjs"
			],
			"dependencies":
			[
				"build:prod:ts",
				"build:type-check"
			]
		}
	},
	"license": "Apache-2.0",
	"dependencies":
	{
		"@11ty/is-land": "^3.0.0",
		"@lit-labs/ssr-client": "^1.1.1",
		"@preact/signals-core": "^1.3.0",
		"lit": "^2.8.0",
		"postdoc-lib": "^1.0.3"
	},
	"devDependencies":
	{
		"@11ty/eleventy": "^2.0.1",
		"@lit-labs/eleventy-plugin-lit": "^1.0.0",
		"@lit-labs/motion": "^1.0.3",
		"@luncheon/esbuild-plugin-gzip": "^0.1.0",
		"@webcomponents/template-shadowroot": "^0.2.1",
		"cheerio": "^1.0.0-rc.12",
		"clean-css": "^5.3.1",
		"eleventy-plugin-compress": "^1.0.5",
		"eleventy-plugin-nesting-toc": "^1.3.0",
		"esbuild": "^0.25.0",
		"esbuild-plugin-minify-html-literals": "^3.0.0",
		"html-minifier": "^4.0.0",
		"markdown-it": "^13.0.1",
		"markdown-it-anchor": "^8.6.7",
		"slugify": "^1.6.6",
		"tiny-glob": "^0.2.9",
		"typescript": "5.8.2",
		"wireit": "^0.13.0"
	}
}
